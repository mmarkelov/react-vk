{
  "name": "react-vk",
  "private": false,
  "version": "5.0.0-rc.0",
  "main": "dist/react-vk.cjs.js",
  "module": "dist/react-vk.esm.js",
  "browser": "dist/react-vk.umd.production.min.js",
  "description": "VK API bindings for React",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clear": "rm -rf dist",
    "build": "npm run clear && NODE_ENV=development rollup -c && NODE_ENV=production rollup -c",
    "eslint": "eslint --fix --ext .js,.jsx ./src",
    "test": "jest ./tests/",
    "test:coverage": "jest --coverage ./tests/",
    "test:watch": "jest --watch ./tests/",
    "prepublish": "npm run build",
    "prettier": "prettier --write src/*.js",
    "precommit": "lint-staged"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/setupJest.js"
    ]
  },
  "lint-staged": {
    "src/*.js": [
      "npm run eslint",
      "npm run prettier",
      "git add"
    ],
    "*.md": [
      "npm run prettier",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mmarkelov/react-vk"
  },
  "peerDependencies": {
    "react": ">= 16.8.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.23",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^23.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.1",
    "prop-types": "^15.6.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.8.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.1",
    "rollup-plugin-terser": "^4.0.2"
  },
  "keywords": [
    "react",
    "react-component",
    "vk",
    "react-vk",
    "vk-api",
    "react-vk-api"
  ],
  "author": "Maksim Markelov <mapkeji26@gmail.com>",
  "license": "MIT"
}
