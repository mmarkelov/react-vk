{
  "name": "react-vk",
  "private": false,
  "version": "3.5.2",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "description": "VK API bindings for React",
  "files": [
    "lib",
    "es",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build-browser": "rm -rf es && BABEL_ENV=browser babel src -d es",
    "build-module": "rm -rf lib && BABEL_ENV=module babel src -d lib",
    "build": "npm run build-browser && npm run build-module",
    "eslint": "eslint --fix --ext .js,.jsx ./src",
    "test": "jest ./tests/",
    "test:coverage": "jest --coverage ./tests/",
    "test:watch": "jest --watch ./tests/",
    "prepublish": "npm run build",
    "prettier": "prettier --write src/*.js",
    "precommit": "lint-staged"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/setupJest.js"
    ]
  },
  "lint-staged": {
    "src/*.js": [
      "npm run eslint",
      "npm run prettier",
      "git add"
    ],
    "*.md": [
      "npm run prettier",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mmarkelov/react-vk"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.21",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.5.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "keywords": [
    "react",
    "react-component",
    "vk",
    "react-vk",
    "vk-api",
    "react-vk-api"
  ],
  "author": "Maksim Markelov <mapkeji26@gmail.com>",
  "license": "MIT"
}
